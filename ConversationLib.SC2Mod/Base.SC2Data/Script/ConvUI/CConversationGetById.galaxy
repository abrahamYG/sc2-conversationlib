include "Script/ConvUI/Headers/CConversationGetById_h";


int ConvUI_CConversationCommentGetById(CConversationRef Conversation, string id){
	int i = 0;
	int index = -1;
	for(i=0;i<SConversationCommentArraySize;i+=1){
		if(Conversation.Comments[i].Id == id){
			index = i;
			break;
		}
	}
	return index;
}

